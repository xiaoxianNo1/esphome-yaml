    name: uptime
    
  - platform: wifi_signal
    #信号强度
    name: signal
    update_interval: 60s
    
  - platform: adc
    #光照强度
    pin: 3
    name: brightness
    attenuation: 12db
    update_interval: 5s
    device_class: illuminance
    unit_of_measurement: "lx"
    icon: mdi:brightness-6
    filters:
      - calibrate_linear:
          method: least_squares
          datapoints:
          # Map 0.0 (from sensor) to 1.0 (true value)
            - 0.00310 -> 100
            - 3 -> 1
    
  - platform: internal_temperature
    #CPU温度
    id: cpu_temprature 
    name: cpu_temprature

